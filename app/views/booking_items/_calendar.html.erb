<%= turbo_frame_tag "calendar" do %>
  Booking widget
  
  <table>
    <thead>
      <th>Room</th>
      <th>1</th>
      <th>2</th>
      <th>3</th>
      <th>4</th>
      <th>5</th>
      <th>6</th>
      <th>7</th>
    </thead>
    <tbody>
      <% booking_items.each do |booking_item| %>
        <tr id="<%= dom_id(booking_item)%>_data">
          <td><%= turbo_frame_tag "#{dom_id(booking_item)}_data_id" do %><%= booking_item.inventory.name %><% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  
  
<% end %>